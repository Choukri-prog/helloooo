from random import randint
demande = input("voulez vous jouer ? (oui/non) : ") 
if demande == "oui":
  while demande == "oui" :
      score = 0
      tentatives = 0
      tentativesm = 10
      chiffre = randint(1, 1000)
      choix = int(input("choississez un chiffre/nombre que vous souhaitez entre 1 et 1000 : "))
      while choix != chiffre:
        tentatives += 1
        if choix < chiffre :
          print("c'est plus, il vous reste",tentatives,"/",tentativesm,"tentatives.")
          choix = int(input("choississez un chiffre/nombre que vous souhaitez entre 1 et 1000 : "))
        elif choix > chiffre :
          print("c'est moins, il vous reste", tentatives, "/", tentativesm, "tentatives.")
          choix = int(input("choississez un chiffre/nombre que vous souhaitez entre 1 et 1000 : "))
        if choix == chiffre :
           print("c'est juste bravo !")
           if tentatives == 1 :
              score += 2500 
              print("vu que tu as trouve du premier coup tu as {} points !".format(score))
           elif 1 < tentatives <= 4 :
             score += 900
             print("bonne tentative , ton score est de {} points!".format(score)) 
           elif 4 < tentatives <= 7 :
             score += 550
             print("pas mal, ton score est de {} points !".format(score)) 
           elif 7 < tentatives <= 10 :
             score += 200 
             print("bien , ton score est de {} points !".format(score))    
           demande = input("voulez vous continuer de jouer ? : ")
           if demande == "oui":
              print("super , continuons !")
              tentatives = 0
              tentativesm = 10
              chiffre = randint(1, 1000)
              choix = int(input("choississez un chiffre/nombre que vous souhaitez entre 1 et 1000 : "))
              continue
           else :
            print("au revoir !")
            break
        if tentatives == tentativesm and choix != chiffre:
          score -= 50
          print("c'est perdu :( essaye une autre fois !")
          print("le chiffre etait {}.".format(chiffre))
          print("dommage , tu perds quelques points , ton score est de {}".format(score))
          demande = input("voulez vous continuer de jouer ? : ")
          if demande == "oui":
            print("super , continuons !")
            tentatives = 0
            tentativesm = 10
            chiffre = randint(1, 1000)
            choix = int(input("choississez un chiffre/nombre que vous souhaitez entre 1 et 1000 : "))
          else :
            print("au revoir !")
            break
elif demande == "non" :
    print("pas de soucis ! au revoir.")
